@using Microsoft.AspNetCore.Http;
@using AppointmentBooking.Enums;

@model AppointmentBooking.Models.DTO.ViewPatientNotesDTO;

@{
    ViewData["Title"] = "Patient History";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="form-group">
    <label for="txtFirstName"><b>First Name:</b></label>
    <label>@Model.PatientDetails.FirstName</label>
</div>
<div class="form-group">
    <label for="txtFirstName"><b>Last Name:</b></label>
    <label>@Model.PatientDetails.LastName</label>
</div>
<div class="form-group">
    <label for="txtFirstName"><b>Email:</b></label>
    <label>@Model.PatientDetails.Email</label>
</div>
<div class="form-group">
    <label for="txtFirstName"><b>Tel:</b></label>
    <label>@Model.PatientDetails.TelephoneNumber</label>
</div>

<div class="container" style="margin-top:30px">
    <button type="button" onclick="location.href='@Url.Action("CreatePatientNote", "PatientNote", new { patientId = Model.PatientDetails.PatientId })'" class="btn btn-success">Create New Note</button>
</div>

<div class="container">
    <div class="row py-5">
        <div class="col-12">
            <table id="example" class="table table-hover responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Note ID</th>
                        <th>Note Description</th>
                        <th>Create Date</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var note in Model.PatientNotes)
                        {
                            <tr>
                                <td>@note.NoteId</td>
                                <td>@note.NoteDescription</td>
                                <td>@note.CreationDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "order": [[2, "desc"]]
            });
        });
    </script>
}