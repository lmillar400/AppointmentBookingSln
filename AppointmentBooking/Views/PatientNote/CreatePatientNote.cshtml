@model AppointmentBooking.Models.PatientNoteModel;
@{
    ViewData["Title"] = "Create Patient Note";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InsertPatientNote", "PatientNote", FormMethod.Post))
{
        @Html.HiddenFor(model => model.PatientId)
  
        @Html.HiddenFor(model => model.PractitionerId)
    <div class="form-group">
        <label for="txtEmail">Note Description</label>
        @Html.EditorFor(model => model.NoteDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Note", @id = "txtNote" } })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create Note" id="Submit" class="btn btn-info" />
        </div>
    </div>

}